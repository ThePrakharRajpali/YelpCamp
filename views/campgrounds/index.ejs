<%- include("../partials/header") %>

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Campgrounds</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-outline-success btn-lg" href="/campgrounds/new"> Add New Campgrounds</a>
            </p>
        </div>

    </header>

    <div class="row text-center">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds</h3>
        </div>

        <% camps.forEach((camp) => { %>
            <div class="col-md-3 col-sm-6">
                <img class="card-img-top" src="<%= camp.image %>" alt="not found">
                <div class="card text-center mb-3" style="height: auto;">
                    <div class="card-body">
                        <h4 class="card-title"><%= camp.name %></h4>
                        <a href="/campgrounds/<%= camp._id %>" class="btn btn-outline-primary">More Info</a>
                    </div>

                </div>

            </div>
        <% }); %>
    </div>



<%- include("../partials/footer") %>
