<%- include("../partials/header") %>
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Edit Comment</h1>
        </div>

        <div class="mt-5 mb-5 mr-auto ml-auto" style="width: 30%">
            <form class="mt-3" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>

                <div class="form-group">
                    <button class="btn btn-success btn-lg btn-block" type="submit" name="button">Submit</button>
                </div>
            </form>

            <div class="container">
                <a class="btn btn-outline-primary ml-0" href="/campgrounds/<%= campground_id %>"> Go Back </a>
            </div>
        </div>

    </div>

<%- include("../partials/footer") %>
